<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if(user){ %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>

        <div class="ml-auto d-inline">
          <form class="form-inline" action="/logout" method="post">
            <span class="my-auto mr-2 ml-auto text-light">
              Logged in as: <i>
                <%= user.email %>
              </i>
            </span>
            <button type="submit" class="btn btn-outline-light ml-2">Logout</button>
          </form>
        </div>
      </div>
      <% } else { %>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class='ml-auto'>
            <a href="/login" class="btn btn-outline-light">Login</a>
            <a href="/register" class="btn btn-light ml-2">Register</a>
          </div>
        </div>
        <% } %>
  </nav>
</header>